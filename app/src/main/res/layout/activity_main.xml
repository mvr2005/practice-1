<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/tx1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tx1plain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:hint="@string/tx1plain"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/tx1"
        app:layout_constraintStart_toStartOf="@+id/tx1"
        app:layout_constraintTop_toBottomOf="@+id/tx1"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tx2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/design_default_color_primary"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tx1plain"
        app:layout_constraintStart_toStartOf="@+id/tx1plain"
        app:layout_constraintTop_toBottomOf="@+id/tx1plain" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/bt1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tx1plain"
        app:layout_constraintStart_toStartOf="@+id/tx1plain"
        app:layout_constraintTop_toBottomOf="@+id/tx2" />

</androidx.constraintlayout.widget.ConstraintLayout>